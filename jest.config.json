{
	"testRegex": "/src/App/.*(\\.|/)spec\\.(jsx?|tsx?)$",
	"transform": {
		"^.+\\.(jsx?|tsx?)$": "babel-jest"
	},
	"moduleNameMapper": {
		"~(.*)$": "<rootDir>/src/App/$1"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{js,jsx,ts,tsx}",
		"!src/**/spec.ts",
		"!src/**/*.spec.ts",
		"!**/*.d.ts",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	]
}
